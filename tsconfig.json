{
	"compilerOptions": {
		"noEmit": true,
		"allowJs": true,
		"outDir": "lib",
		"target": "es2018",
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"declaration": true,
		"sourceMap": true,
		"pretty": true,
		"newLine": "lf",
		"strictNullChecks": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noFallthroughCasesInSwitch": true,
		"noEmitOnError": true,
		"skipLibCheck": true
	},
	"include": [
		"src",
		"test",
		"examples",
		"*.md",
		"*.js",
		".*.js"
	],
	"exclude": [
		"test/generated"
	]
}
