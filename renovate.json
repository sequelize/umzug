{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommits"
  ],
  "schedule": [
    "before 3am on Monday"
  ],
  "prConcurrentLimit": 4,
  "dependencyDashboard": true,
  "dependencyDashboardAutoclose": true,
  "packageRules": [
    {
      "depTypeList": [
        "devDependencies"
      ],
      "groupName": "devDependencies",
      "excludePackageNames": [
        "sequelize",
        "strip-ansi"
      ],
      "automerge": true
    }
  ]
}